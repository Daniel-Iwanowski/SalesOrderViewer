<mvc:View
	controllerName="salesorderviewer.SalesOrderViewer.controller.Master"
	xmlns="sap.m"
	xmlns:semantic="sap.f.semantic"
	xmlns:mvc="sap.ui.core.mvc">
	<semantic:SemanticPage
		id="masterPage"
		preserveHeaderStateOnScroll="true"
		toggleHeaderOnTitleClick="false">
		<semantic:titleHeading>
			<Title
				id="masterPageTitle"
				text="{masterView>/title}"
				level="H2"/>
		</semantic:titleHeading>
		<semantic:content>
			<List
				id="list"
				width="auto"
				class="sapFDynamicPageAlignContent"
				items="{
					path: '/BusinessPartnerSet',
					parameters: {
						expand: 'ToSalesOrders',
						$count: true
					},
					sorter: {
						path: 'CompanyName',
						descending: false
					},
					groupHeaderFactory: '.createGroupHeader'
				}"
				busyIndicatorDelay="{masterView>/delay}"
				noDataText="{masterView>/noDataText}"
				mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}"
				growing="true"
				growingScrollToLoad="true"
				updateFinished=".onUpdateFinished"
				selectionChange=".onSelectionChange"
				showUnread="true">
				<headerToolbar>
					<OverflowToolbar>
						<SearchField
							id="searchField"
							showRefreshButton="true"
							tooltip="{i18n>masterSearchTooltip}"
							search=".onSearch"
							width="auto">
							<layoutData>
								<OverflowToolbarLayoutData
									minWidth="150px"
									maxWidth="240px"
									shrinkable="true"
									priority="NeverOverflow"/>
							</layoutData>
						</SearchField>
						<ToolbarSpacer/>
						<Button
							id="sortButton"
							press=".onOpenViewSettings"
							icon="sap-icon://sort"
							tooltip="{i18n>masterSortTooltip}"
							type="Transparent"/>
						<Button
							id="groupButton"
							press=".onOpenViewSettings"
							icon="sap-icon://group-2"
							tooltip="{i18n>masterGroupTooltip}"
							type="Transparent"/>
						<SegmentedButton 
							selectedKey="showDummy"
							selectionChange="onSegmentedButtonChange">
							<items>
								<SegmentedButtonItem 
									text="{i18n>masterHideDummyBtn}" 
									icon="sap-icon://filter"
									key="hideDummy" />
								<SegmentedButtonItem 
									text="{i18n>masterShowAllBtn}" 
									icon="sap-icon://clear-filter"
									key="showDummy" />
							</items>
						</SegmentedButton>
					</OverflowToolbar>
				</headerToolbar>
				<items>
					<ObjectListItem
						type="Navigation"
						press=".onSelectionChange"
						title="{CompanyName}"
						unread="false">
						<attributes>
							<ObjectAttribute 
								text="{i18n>masterPartnerID} {
									path: 'BusinessPartnerID',
									formatter: '.formatter.businessPartnerOrdersCount'
								}" />
						</attributes>						
					</ObjectListItem>
				</items>
			</List>
		</semantic:content>
	</semantic:SemanticPage>
</mvc:View>