<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core" 
	xmlns:semantic="sap.f.semantic" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form" 
	xmlns:smartForm="sap.ui.comp.smartform" 
	xmlns:smartField="sap.ui.comp.smartfield">
	<l:ResponsiveSplitter>
		<l:PaneContainer 
			orientation="Horizontal">
			<l:SplitPane
				requiredParentWidth="400" 
				demandPane="true">
				<Panel 
					width="auto" 
					height="400px" 
					class="sapUiResponsiveMargin" 
					accessibleRole="Region" 
					headerText="{i18n>detailViewPartnerDetails}">
					<content>
						<f:Form
							editable="false">
							<f:layout>
								<f:ResponsiveGridLayout
									columnsXL="1"
									columnsL="1"
									columnsM="1"/>
							</f:layout>
							<f:formContainers>
								<f:FormContainer
									class="sapUiNoMargin">
									<f:formElements>
										<f:FormElement 
											label="{i18n>detailViewPartnerStreet}">
											<f:fields>
												<Text 
													text="{Address/Street}"/>
												<Text 
													text="{Address/Building}"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement
											label="{i18n>detailViewPartnerPostalCode}">
											<f:fields>
												<Text 
													text="{Address/PostalCode}" />
											</f:fields>
										</f:FormElement>
										<f:FormElement 
											label="{i18n>detailViewPartnerCity}">
											<f:fields>
												<Text 
													text="{Address/City}" />
											</f:fields>
										</f:FormElement>
										<f:FormElement 
											label="{i18n>detailViewPartnerCountry}">
											<f:fields>
												<Text 
													text="{
														path: 'Address/Country',
														formatter: '.formatter.countryName'
													}"/>
											</f:fields>
										</f:FormElement>
									</f:formElements>
								</f:FormContainer>
							</f:formContainers>
						</f:Form>
					</content>
				</Panel>
			</l:SplitPane>
			<l:SplitPane 
				requiredParentWidth="640" 
				demandPane="true">
				<Panel 
					class="sapUiResponsiveMargin" 
					width="auto" 
					height="400px" 
					headerText="{i18n>detailViewPartnerMap}"
					busy="{detailView>/busyHTML}" 
					busyIndicatorDelay="{detailView>/delay}">
					<content>
						<core:HTML
							class="sapUiNoMargin"
							content="{ 
								parts: [ 
									'Address/Street', 
									'Address/Building', 
									'Address/City', 
									'Address/PostalCode', 
									'Address/Country' ], 
								formatter: '.formatter.formatInteractiveMap' 
							}"
							afterRendering="onAfterHTMLRendering"/>
					</content>
				</Panel>
			</l:SplitPane>
		</l:PaneContainer>
	</l:ResponsiveSplitter>
</core:FragmentDefinition>